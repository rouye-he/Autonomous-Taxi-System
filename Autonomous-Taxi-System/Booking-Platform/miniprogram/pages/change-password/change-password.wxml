<navigation-bar title="修改密码" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="profile-container">
  <!-- 修改密码区域 -->
  <view class="form-section">
    <view class="section-title">修改密码</view>
    <view class="info-list">
      <view class="info-item {{oldPasswordError ? 'error' : ''}}">
        <text class="info-label">原密码</text>
        <input 
          class="info-input" 
          password 
          placeholder="请输入原密码" 
          bindinput="onOldPasswordInput"
          value="{{oldPassword}}"
        />
        <text wx:if="{{oldPasswordError}}" class="info-error">{{oldPasswordError}}</text>
      </view>
      
      <view class="info-item {{newPasswordError ? 'error' : ''}}">
        <text class="info-label">新密码</text>
        <input 
          class="info-input" 
          password 
          placeholder="请输入新密码" 
          bindinput="onNewPasswordInput"
          value="{{newPassword}}"
        />
        <text wx:if="{{newPasswordError}}" class="info-error">{{newPasswordError}}</text>
      </view>
      
      <view class="info-item {{confirmPasswordError ? 'error' : ''}}">
        <text class="info-label">确认新密码</text>
        <input 
          class="info-input" 
          password 
          placeholder="请再次输入新密码" 
          bindinput="onConfirmPasswordInput"
          value="{{confirmPassword}}"
        />
        <text wx:if="{{confirmPasswordError}}" class="info-error">{{confirmPasswordError}}</text>
      </view>
    </view>
    
    <text wx:if="{{formError}}" class="global-error">{{formError}}</text>
    
    <view class="action-button">
      <button class="profile-btn" bindtap="handleSubmit" disabled="{{loading}}">
        <text wx:if="{{loading}}" class="loading-icon"></text>
        <text>确认修改</text>
      </button>
    </view>
  </view>
</view> 